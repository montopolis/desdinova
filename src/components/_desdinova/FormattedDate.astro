---
import desdinovaConfig from "../../config/desdinova-config"
interface Props {
    date: Date
}

const {date} = Astro.props
---

<time>
    {
        new Intl.DateTimeFormat(desdinovaConfig.localeDateString, {
            year: "numeric",
            month: "short",
            day: "numeric",
        }).format(date)
    }
</time>
