---
import {ViewTransitions} from "astro:transitions"

// Supports weights 100-900
import "@fontsource-variable/montserrat"
// Supports weights 100-700
import "@fontsource-variable/aleo"
// Supports weights 100-800
import "@fontsource-variable/jetbrains-mono"

import {AstroSeo} from "@astrolib/seo"
import {SITE_DESCRIPTION} from "../../../site.config.mjs"
import {SITE_TITLE} from "../../../site.config.mjs"
import Analytics from "../Analytics.astro"
const {pageTitle, pageDescription} = Astro.props
const presentablePageTitle = pageTitle ? " / " + pageTitle : ""
const presentablePageDescription = pageDescription
    ? pageDescription
    : SITE_DESCRIPTION
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--sitemap will be automatically built by @astrojs/sitemap, the following line is required-->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />

    <title>{SITE_TITLE}{presentablePageTitle}</title>
    <AstroSeo description={presentablePageDescription} />

    <Analytics />

    <ViewTransitions fallback="swap" />
</head>

<script is:inline>
    const theme = (() => {
        if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
        ) {
            return localStorage.getItem("theme")
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            return "dark"
        }
        return "light"
    })()

    if (theme === "light") {
        document.documentElement.classList.remove("dark")
    } else {
        document.documentElement.classList.add("dark")
    }
    window.localStorage.setItem("theme", theme)
</script>
