---
import siteData from "../../config/siteData"
interface Props {
    date: Date
}

const {date} = Astro.props
---

<time>
    {
        new Intl.DateTimeFormat(siteData.localeDateString, {
            year: "numeric",
            month: "short",
            day: "numeric",
        }).format(date)
    }
</time>
