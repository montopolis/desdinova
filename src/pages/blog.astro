---
import {getCollection} from "astro:content"
import Layout from "../layouts/Layout.astro"
import FormattedDate from "../components/_core/FormattedDate.astro"
import BlogPostImage from "../components/_core/BlogPostImage.astro"
import {SITE_BACKGROUND_COLOR} from "../../astro.config.mjs"
import {Icon} from "astro-icon/components"

const posts = (await getCollection("blog")).sort(
    (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
)
---

<Layout pageTitle="Blog" pageDescription="Blog">
    <section class={SITE_BACKGROUND_COLOR}>
        <div class="mx-auto max-w-screen-xl px-4 py-8 lg:px-6 lg:py-16">
            <div class="mx-auto mb-8 max-w-screen-sm text-center lg:mb-16">
                <h2
                    class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 lg:text-4xl dark:text-white">
                    Our Blog
                </h2>
                <p
                    class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
                    Our Blog posties posties!
                </p>
            </div>
            <div class="grid gap-8 lg:grid-cols-2">
                {
                    posts.map(posts => (
                        <article
                            class="rounded-lg border border-gray-200 bg-white p-6 shadow-md dark:border-gray-700 dark:bg-gray-800">
                            <div class="mb-5">
                                <a href={`/${posts.slug}/`}>
                                    <BlogPostImage
                                        imagePath={posts.data.heroImage}
                                        altText={`${posts.data.title}`}
                                    />
                                </a>
                            </div>
                            <div
                                class="mb-5 flex items-center justify-between text-base text-gray-500 dark:text-gray-400">
                                <span
                                    class="inline-flex items-center rounded bg-primary-100 px-2.5 py-0.5 text-xs font-medium text-primary-800 dark:bg-primary-200 dark:text-primary-800">
                                    <Icon name="line-md:file-plus-filled" class="mr-1 h-3 w-3" } />
                                    {posts.data.category}
                                </span>
                                <span class="text-sm">
                                    <Icon
                                        name="tabler:clock"
                                        class="-mt-0.5 inline-block h-4 w-4 dark:text-gray-400"
                                    />
                                    <FormattedDate date={posts.data.pubDate} />
                                </span>
                            </div>
                            <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                                <a href={`/${posts.slug}/`}>
                                    {posts.data.title}
                                </a>
                            </h2>
                            <p class="mb-5 font-light text-gray-500 dark:text-gray-400">
                                {posts.data.description}
                            </p>

                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-4">
                                    &nbsp;
                                </div>
                                <a
                                    href={`/${posts.slug}/`}
                                    class="inline-flex items-center font-medium text-primary-600 hover:underline dark:text-primary-500">
                                    Read more
                                    <Icon name="tabler:arrow-right" class="ml-2 h-5 w-5" />
                                </a>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
